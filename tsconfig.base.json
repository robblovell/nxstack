{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es2018"],
    "importHelpers": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@c6o/common": ["libs/common/src/index.ts"],
      "@c6o/logger": ["libs/logger/src/index.ts"],
      "@c6o/kits": ["libs/kits/src/index.ts"],
      "@c6o/provisioner": ["libs/provisioner/src/index.ts"]
    }
  },
  "exclude": [
    "test",
    "spec",
    "lib",
    "node_modules",
    "tmp"
  ]
}
