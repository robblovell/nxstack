{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./lib",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2018",
        "sourceMap": true,
        "lib": [
            "es2018"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}